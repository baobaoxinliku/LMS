@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@section TitleSection{
    CarAdd
}
@section HeaderSection{

}
@section ContentBody{
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb">
                <a href="#" title="返回首页" class="tip-bottom"><i class="icon-home"></i>首页</a>
                <a href="#">车辆情况</a>
                <a href="#" class="current">添加车辆</a>
            </div>
            <h1>添加车辆</h1>
        </div>
        <div class="container-fluid">
            <hr>
            <div class="row-fluid">
                <div class="span6">
                    <div class="widget-box">
                        <div class="widget-title">
                            <span class="icon"> <i class="icon-align-justify"></i></span>
                            <h5>添加信息</h5>
                        </div>

                        <div class="widget-content nopadding">
                            <form action="/Car/CarAdd" method="post" class="form-horizontal">
                                <div class="control-group">
                                    <label class="control-label">车牌号 :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" placeholder="请输入车牌号" name="CarNo" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">驾驶员 :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" placeholder="请输入驾驶员" name="CarDiver" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">车辆路线 :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" placeholder="请输入车辆路线" name="CarAddress" />
                                    </div>
                                </div>

                                <div class="control-group">
                                    <label class="control-label">车辆类型 :</label>
                                    <div class="controls">
                                        <input type="text" class="span11" placeholder="请输入车辆类型" name="CarType" />
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-success">添加</button>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

