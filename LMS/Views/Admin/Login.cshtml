@model LMS.Models.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="~/Content/matrix-login.css" />
    <link href="~/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href='~/Content/a.css' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="container">
        @ViewBag.LoginState
    </div>
    <div id="loginbox">
        <form id="loginform" class="form-vertical" action="/Admin/Login" method="post">
            <div class="control-group normal_text"> <h3><img src="~/img/logo.png" alt="Logo" /></h3></div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lg"><i class="icon-user"></i></span><input type="text" placeholder="请输入用户名" name="AdminAccount" id="AdminAccount"/>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_ly"><i class="icon-lock"></i></span><input type="password" placeholder="请输入密码" name="AdminPwd" id="="AdminPwd""/>
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on bg_lb"><i class="icon-lock"></i></span><input type="text" placeholder="请输入验证码" />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <span class="pull-left"><a href="#" class="flip-link btn btn-info" id="to-recover">忘记密码?</a></span>
                <span class="pull-right">
                    <button type="submit" class="btn btn-success">登录</button>
                </span>
            </div>
        </form>
        <form id="recoverform" action="#" class="form-vertical">
            <p class="normal_text">我们将对你进行绑定的邮箱发送请求</p>

            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on bg_lo"><i class="icon-envelope"></i></span><input type="text" placeholder="请输入绑定的邮箱" />
                </div>
            </div>

            <div class="form-actions">
                <span class="pull-left"><a href="#" class="flip-link btn btn-success" id="to-login">&laquo; 返回登录页</a></span>
                <span class="pull-right"><a class="btn btn-info" />发送</a></span>
            </div>
        </form>
    </div>

    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/matrix.login.js"></script> 
</body>
</html>
