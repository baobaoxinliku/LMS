@model PagedList.IPagedList<LMS.Models.Admin>
@using PagedList.Mvc
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@section TitleSection{
    AdminList
}
@section HeaderSection{

}
@section ContentBody{
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb">
                <a href="Index" title="返回首页" class="tip-bottom"><i class="icon-home"></i>首页</a>
                <a href="#">用户管理</a>
                <a href="AdminList" class="current">用户列表</a>
            </div>
            <h1>用户列表</h1><hr />
        </div>
        <div class="container">
            <div class="widget-content nopadding">
                <table class="table table-bordered data-table">
                    <thead>
                        <tr>
                            <th>编号</th>
                            <th>账号</th>
                            <th>姓名</th>
                            <th>电话</th>
                            <th></th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (LMS.Models.Admin item in Model)
                        {
                            <tr>
                                <td>@item.AdminNo</td>
                                <td>@item.AdminAccount</td>
                                <td>@item.AdminName</td>
                                <td>@item.AdminTel</td>
                                <td>@Html.ActionLink("详情", "AdminDetail", new { id = item.AdminNo })</td>
                                <td>@Html.ActionLink("编辑", "AdminEdit", new { id = item.AdminNo })</td>
                                <td>@Html.ActionLink("删除", "AdminDelete", new { id = item.AdminNo })</td>
                             </tr>
                        }
                    </tbody>
                </table>
                <div>
                    每页 @Model.PageSize 条记录，共 @Model.PageCount 页，当前第 @Model.PageNumber 页
                    @Html.PagedListPager(Model, page => Url.Action("IndexUser1", new { page }))
                </div>
            </div>
        </div>
    </div>
}
