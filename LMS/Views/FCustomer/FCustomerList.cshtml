@model LMS.ViewModels.AccountListViewModel
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@section TitleSection{
    FCustomerList
}
@section HeaderSection{

}
@section ContentBody{
    <div id="sidebar">
        <ul>
            <li><a href="Index"><i class="icon icon-home"></i>首页</a></li>
            <li><a href="#">订单管理</a></li>
            <li><a href="#">线路详情</a></li>
            <li><a href="#">车辆情况</a></li>
            <li class="active"><a href="#">用户管理</a></li>
            <li><a href="Login">退出</a></li>
        </ul>
    </div>
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb">
                <a href="Index" title="返回首页" class="tip-bottom"><i class="icon-home"></i>首页</a>
                <a href="#">用户管理</a>
                <a href="AdminList" class="current">用户列表</a>
            </div>
            <h1>用户列表</h1><hr />
        </div>
        <div class="container">
            @using (Html.BeginForm())
            {
                <p>
                    请输入您要搜索的姓名 ： @Html.TextBox("Search")
                    <input type="submit" value="搜索" class="btn btn-default" />
                </p>
            }
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>发货人编号</th>
                        <th>发货人姓名</th>
                        <th>发货人电话</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (LMS.Models.FCustomer item in Model.FCustomer)
                    {
                        <tr>
                            <td>@item.FCustoID</td>
                            <td>@item.FCustoName</td>
                            <td>@item.FCustoTel</td>
                            <td>@Html.ActionLink("详情", "FCustomerDetail", new { id = item.FCustoID })</td>
                            <td>@Html.ActionLink("编辑", "FCustomerEdit", new { id = item.FCustoID })</td>
                            <td>@Html.ActionLink("删除", "FCustomerDelete", new { id = item.FCustoID })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
