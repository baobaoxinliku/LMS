@model LMS.Models.SCustomer
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@section TitleSection{
    SCustomerDelete
}
@section HeaderSection{

}
@section ContentBody{
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb">
                <a href="#" title="返回首页" class="tip-bottom"><i class="icon-home"></i>首页</a>
                <a href="#">客户情况</a>
                <a href="#">收货人信息</a>
                <a href="#" class="current">删除</a>>
            </div>
            <h1>用户列表</h1><hr />
        </div>
        <div class="body-content container">
            <h2>确定删除以下信息吗？</h2>
            <dl>
                <dt>发货人编号：</dt>
                <dd>@Html.DisplayFor(model => model.SCustoID)</dd>

                <dt><br />发货人姓名：</dt>
                <dd>@Html.DisplayFor(model => model.SCustoTel)</dd>

                <dt><br />发货人电话：</dt>
                <dd>@Html.DisplayFor(model => model.SCustoName)</dd>
            </dl>
            @using (Html.BeginForm())
            {
                <div>
                    <input type="submit" value="删除" class="btn btn-default" />
                    @Html.ActionLink("返回首页", "SCustomerList")
                </div>
            }
        </div>
    </div>
}

