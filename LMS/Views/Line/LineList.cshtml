@model LMS.ViewModels.AccountListViewModel
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@section TitleSection{
    LineList
}
@section HeaderSection{

}
@section ContentBody{
    <div id="content">
        <div id="content-header">
            <div id="breadcrumb">
                <a href="#" title="返回首页" class="tip-bottom"><i class="icon-home"></i>首页</a>
                <a href="#">路线详情</a>
                <a href="#" class="current">路线列表</a>
            </div>
            <h1>路线列表</h1><hr />
        </div>
        <div class="container">
            @using (Html.BeginForm())
            {
                <p>
                    请输入您要搜索的起始站 ： @Html.TextBox("Search")
                    <button type="submit" class="tip-bottom" title="Search"><i class="icon-search icon-white"></i></button>
                </p>
            }
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-th"></i></span>
                    <h5>路线信息表</h5>
                </div>
                <div class="widget-content nopadding">
                    <table class="table table-bordered data-table">
                        <thead>
                            <tr>
                                <th>路线编号</th>
                                <th>起始站</th>
                                <th>目的地</th>
                                <th>路线长度</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (LMS.Models.Line item in Model.Line)
                            {
                                <tr>
                                    <td>@item.LineID</td>
                                    <td>@item.Start</td>
                                    <td>@item.End</td>
                                    <td>@item.LineLength</td>
                                    <td>@Html.ActionLink("详情", "LineDetail", new { id = item.LineID })</td>
                                    <td>@Html.ActionLink("编辑", "LineEdit", new { id = item.LineID })</td>
                                    <td>@Html.ActionLink("删除", "LineDelete", new { id = item.LineID })</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
